  <!-- Bootstrap 5 JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Simple cart and site script -->
  <script>
    // Simple in-memory cart (suitable for demo / practical)
    const cart = [];
    const cartCountEl = document.getElementById('cartCount');
    const cartItemsEl = document.getElementById('cartItems');
    const cartEmptyEl = document.getElementById('cartEmpty');
    const cartTotalEl = document.getElementById('cartTotal');

    function addToCart(name, price) {
      const existing = cart.find(i => i.name === name);
      if (existing) { existing.qty += 1; existing.lineTotal = existing.qty * existing.price; }
      else cart.push({ name, price, qty: 1, lineTotal: price });

      updateCartUI();
      // small toast/feedback
      alert(name + " added to cart.");
    }

    function updateCartUI() {
      const total = cart.reduce((s, i) => s + i.lineTotal, 0);
      cartTotalEl.textContent = total;
      cartCountEl.textContent = cart.reduce((s, i) => s + i.qty, 0);

      if (cart.length === 0) {
        cartEmptyEl.style.display = 'block';
        cartItemsEl.innerHTML = '';
      } else {
        cartEmptyEl.style.display = 'none';
        cartItemsEl.innerHTML = '';
        cart.forEach((item, idx) => {
          const node = document.createElement('div');
          node.className = 'list-group-item d-flex justify-content-between align-items-center';
          node.innerHTML = `
            <div>
              <div class="fw-bold">${escapeHtml(item.name)}</div>
              <small class="text-muted">₹${item.price} x ${item.qty}</small>
            </div>
            <div>
              <button class="btn btn-sm btn-outline-secondary me-2" onclick="changeQty(${idx}, -1)">-</button>
              <button class="btn btn-sm btn-outline-secondary me-2" onclick="changeQty(${idx}, 1)">+</button>
              <button class="btn btn-sm btn-danger" onclick="removeItem(${idx})">Remove</button>
            </div>
          `;
          cartItemsEl.appendChild(node);
        });
      }
    }

    function changeQty(index, delta) {
      cart[index].qty += delta;
      if (cart[index].qty <= 0) return removeItem(index);
      cart[index].lineTotal = cart[index].qty * cart[index].price;
      updateCartUI();
    }

    function removeItem(index) {
      cart.splice(index, 1);
      updateCartUI();
    }

    function checkout() {
      if (cart.length === 0) { alert('Your cart is empty.'); return; }
      // Build order summary for mailto
      let summary = 'Order from StyleKart Commerce%0D%0A%0D%0A';
      cart.forEach(i => {
        summary += `${encodeURIComponent(i.name)} - Qty: ${i.qty} - ₹${i.lineTotal}%0D%0A`;
      });
      const total = cart.reduce((s, i) => s + i.lineTotal, 0);
      summary += `%0D%0ATotal: ₹${total}%0D%0A%0D%0APlease contact me to proceed with payment and shipping.`;

      // Open mail client to place order (mailto)
      const mail = 'syedalimutuza21@gmail.com';
      const subject = encodeURIComponent('Order from StyleKart Commerce');
      window.location.href = `mailto:${mail}?subject=${subject}&body=${summary}`;
    }

    // Buy now opens a mailto prepared for one item
    function buyNow(name, price) {
      const mail = 'syedalimutuza21@gmail.com';
      const subject = encodeURIComponent('Buy Now Order from StyleKart Commerce');
      const body = encodeURIComponent(`I want to buy:\n\nProduct: ${name}\nPrice: ₹${price}\n\nPlease contact me to complete payment and delivery.\n\nThank you,\n[Your Name]`);
      window.location.href = `mailto:${mail}?subject=${subject}&body=${body}`;
    }

    function filterCategory(cat) {
      const cards = document.querySelectorAll('.product-card');
      cards.forEach(c => {
        if (cat === 'all' || c.dataset.category === cat) c.style.display = '';
        else c.style.display = 'none';
      });
    }

    function searchProducts() {
      const q = document.getElementById('searchInput').value.toLowerCase().trim();
      const cards = document.querySelectorAll('.product-card');
      cards.forEach(c => {
        const title = c.querySelector('.card-title').textContent.toLowerCase();
        if (!q || title.includes(q)) c.style.display = '';
        else c.style.display = 'none';
      });
    }

    // Utility: escape HTML for item names
    function escapeHtml(text) {
      return text.replaceAll('&','&amp;').replaceAll('<','&lt;').replaceAll('>','&gt;');
    }

    // Initialize
    updateCartUI();
  </script>
</body>
</html>
